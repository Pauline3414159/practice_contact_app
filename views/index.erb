
<table id="keywords">
  <thead>
    <tr>
      <th></th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Email Address</th>
    </tr>
  <thead>
  <tbody>
    <% @contacts.each do |contact| %>
    <tr>
      <td>
        <a href="/contact/<%= contact.id %>/edit">edit</a>
        <%= " | " %>
        <form class="inline" action="contact/<%= contact.id %>/delete" method="post">
          <button type="submit">Delete</button>
        </form>
      </td>
      <td><%= contact.last %></td>
      <td><%= contact.first %></td>
      <td><%= contact.address.all %></td>
      
      <% if contact.phone.empty? %>
        <td></td>
      <% else %>
        <td><%= contact.phone.dup.insert(3,'-').insert(-5, '-') %></td>
        
      <% end %>
      
      <td><%= contact.email %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  <p>
    <a href="/home/create_contact">Create New Contact</a>
</p>